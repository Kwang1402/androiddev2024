<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragment.WeatherAndForecastFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/weather_fragment_container"
        android:name="vn.edu.usth.weather.fragment.WeatherFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/forecast_fragment_container"
        android:name="vn.edu.usth.weather.fragment.ForecastFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

</LinearLayout>